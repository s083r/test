def compress_string(text):
    """
    >>> compress_string('dddddffeeeeg')
    'd5f2e4g'
    >>> compress_string('abcd')
    'abcd'
    """

    counter = 0
    previous = text[0]
    compress = ''
    for element in text:
        if element == previous:
            counter = counter + 1
            previous = element
        else:
            if counter == 1:
                compress = str(compress) + str(previous)
                previous = element
            elif counter == 0:
                compress = compress
            else:
                compress = str(compress) + str(previous) + str(counter)
            counter = 1
            previous = element
    if counter != 1:
        compress = str(compress) + str(previous) + str(counter)
    elif counter == 1:
        compress = str(compress) + str(previous)
    return compress

def decompress_string(text):

    """
    >>> decompress_string('a10')
    'aaaaaaaaaa'
    >>> decompress_string('a5b')
    'aaaaab'

    """

    symbol = text[0]
    numeral = '0'
    decompress = ''
    for element in text:
        if element >= '0' and element <= '9':
            numeral = str(numeral) + str(element)
            decompress = decompress + symbol * (int(numeral) - 1)
        else:
            symbol = element
            decompress = decompress + symbol
            numeral = ''
    return decompress

if __name__ == '__main__':
    import doctest
    doctest.testmod()
